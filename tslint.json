{
  "rules": {
    "max-line-length": {
      "options": [
        120
      ],
      "severity": "warning"
    },
    "no-lowlevel-commenting": false,
    "curly": {
      "severity": "warning"
    },
    "jsx-wrap-multiline": false,
    "typedef": false,
    "jsx-no-multiline-js": false,
    "discreet-ternary": false,
    "jsx-boolean-value": false,
    "ter-arrow-parens": false,
    "jsx-no-lambda": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "webpack.config.js"
    ]
  },
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-silind"
  ]
}